
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}
@model IEnumerable<Website_StorePhone3.Models.db.brand>


<div class="main-content">
    <div class="main-content-inner">
        <div class="breadcrumbs ace-save-state" id="breadcrumbs">
            <ul class="breadcrumb">
                <li>
                    <i class="ace-icon fa fa-home home-icon"></i>
                    <a href="index.html">Trang chủ</a>
                </li>

                <li>
                    <a href="index.html">Quản lí nhà cung cấp</a>
                </li>
                <li class="active">Thông tin nhà cung cấp</li>
            </ul><!-- /.breadcrumb -->

            <div class="nav-search" id="nav-search">
                <form class="form-search">
                    <span class="input-icon">
                        <input type="text" placeholder="Search ..." class="nav-search-input" id="nav-search-input" autocomplete="off" />
                        <i class="ace-icon fa fa-search nav-search-icon"></i>
                    </span>
                </form>
            </div><!-- /.nav-search -->
        </div>

        <div class="page-content">


            <div class="page-header">
                <h1>
                    Nhà sản xuất
                    <small>
                        <i class="ace-icon fa fa-angle-double-right"></i>
                        Thông tin các nhà sản xuất
                    </small>
                    <button style="margin-right:0px;border-radius: 5px" class="btn btn-primary pull-right" onclick="addBrand()">Thêm nhà sản xuất </button>
                </h1>
            </div><!-- /.page-header -->
            <div class="modal fade" id="newOrderModal">
                <div class="modal-dialog modal-lg" style=" width: 700px !important;">
                    <div class="modal-content">
                        <div class="modal-header">
                            <a href="#" class="close" data-dismiss="modal">&times;</a>
                            <h4 align="center">Thêm nhà sản xuất</h4>
                        </div>
                        <br>
                        <form class="form-horizontal" role="form">
                            <div class="form-group">
                                <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Tên nhà sản xuất: </label>

                                <div class="col-sm-9">
                                    <input type="text" name="nameBrand" id="nameBrand" placeholder="Vui lòng nhập tên nhà sản xuất" class="col-xs-10" />
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Logo: </label>

                                <div class="col-sm-9">
                                    <input type="file" name="logoBrand" id="logoBrand" class="col-xs-10" />
                                </div>
                            </div>
                            <div class="space-4"></div>
                            <div class="form-group">

                                <div class="col-md-2 col-lg-offset-4">
                                    <a id="addToList" class="btn btn-primary">Thêm vào danh sách</a>
                                </div>
                            </div>

                            <br>
                            <table id="detailsTable" class="table">
                                <thead>
                                    <tr>
                                        <th style="width:10%"></th>
                                        <th style="width:10%"></th>
                                        <th style="width:30%">Nhà sản xuất</th>
                                        <th style="width:25%">Logo</th>

                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>


                            <div class="clearfix form-actions">
                                <div class="col-md-offset-3 col-md-9">
                                    <button id="saveBrands" class="btn btn-info" type="button">
                                        <i class="ace-icon fa fa-check bigger-110"></i>
                                        Submit
                                    </button>

                                    &nbsp; &nbsp; &nbsp;
                                    <button class="btn" type="reset">
                                        <i class="ace-icon fa fa-undo bigger-110"></i>
                                        Reset
                                    </button>
                                </div>
                            </div>

                            <div class="hr hr-24"></div>

                            <div class="space-24"></div>


                        </form>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-xs-12">
                    <!-- PAGE CONTENT BEGINS -->

                    <div class="row">
                        <div class="col-xs-12">

                            <!-- div.table-responsive -->
                            <!-- div.dataTables_borderWrap -->
                            <div>
                                <table id="dynamic-table" class="table table-striped table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th class="center">
                                                <label class="pos-rel">
                                                    <input type="checkbox" class="ace" />
                                                    <span class="lbl"></span>
                                                </label>
                                            </th>
                                            <th>Id</th>
                                            <th>Tên nhà sản xuất</th>

                                            <th>
                                                <i class="ace-icon fa fa-clock-o bigger-110 hidden-480"></i>
                                                Hiện thị
                                            </th>


                                            <th>Tác vụ</th>
                                        </tr>
                                    </thead>

                                    <tbody>

                                        @foreach (var item in Model)
                                        {

                                            if (item.activeFlag==1)
                                            {



                                                <tr>
                                                    <td class="center">
                                                        <label class="pos-rel">
                                                            <input type="checkbox" class="ace" value="" />
                                                            <span class="lbl"></span>
                                                        </label>
                                                    </td>


                                                    <td>@item.id</td>
                                                    <td class="hidden-480">@item.name</td>
                                                    <!--                                            <td>Thành viên</td>-->

                                                    <td class="hidden-480">
                                                        <div class="col-xs-3">
                                                            <label>
                                                                <input name="switch-field-1" class="ace ace-switch" type="checkbox" />
                                                                <span class="lbl"></span>
                                                            </label>
                                                        </div>
                                                    </td>

                                                    <td>
                                                        <div class="hidden-sm hidden-xs action-buttons">

                                                            <a class="green" href="edit_supplier.html">
                                                                <i class="ace-icon fa fa-pencil bigger-130"></i>
                                                            </a>

                                                            <a class="red" href="#" onclick="messFuntion()">
                                                                <i class="ace-icon fa fa-trash-o bigger-130"></i>
                                                                <script>
                                                                    function messFuntion() {
                                                                        confirm("Bạn có muốn xóa !")
                                                                    }
                                                                </script>
                                                            </a>
                                                        </div>


                                                    </td>
                                                </tr>

                                            }
                                        }


                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <!-- PAGE CONTENT ENDS -->
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.page-content -->
    </div>
</div><!-- /.main-content -->

<script type="text/javascript">
    function addBrand() {
        $("#newOrderModal").modal();
    }
</script>

<script type="text/javascript">
    //Add Multiple Order.
    $("#addToList").click(function (e) {
        e.preventDefault();

        if ($.trim($("#nameBrand").val()) == "" || $.trim($("#logoBrand").val())) return;

        var nameBrand = $("#nameBrand").val(),
            logoBrand = $("#logoBrand").val(),
            detailsTableBody = $("#detailsTable tbody");

        var brandItem = '<tr><td>' + nameBrand + '</td><td>' + logoBrand + '</td><td><a data-itemId="0" href="#" class="deleteItem">Remove</a></td></tr>';
        detailsTableBody.append(brandItem);
        clearItem();
    });
    //After Add A New Order In The List, Clear Clean The Form For Add More Order.
    function clearItem() {
        $("#nameBrand").val('');
        $("#logoBrand").val('');
       
    }
    // After Add A New Order In The List, If You Want, You Can Remove It.
    $(document).on('click', 'a.deleteItem', function (e) {
        e.preventDefault();
        var $self = $(this);
        if ($(this).attr('data-itemId') == "0") {
            $(this).parents('tr').css("background-color", "#ff6347").fadeOut(800, function () {
                $(this).remove();
            });
        }
    });
    //After Click Save Button Pass All Data View To Controller For Save Database
    function saveOrder(data) {
        return $.ajax({
            contentType: 'application/json; charset=utf-8',
            dataType: 'json',
            type: 'POST',
            url: "/Brand/saveBrands",
            data: data,
            success: function (result) {
                alert(result);
                location.reload();
            },
            error: function () {
                alert("Error!")
            }
        });
    }
    //Collect Multiple Order List For Pass To Controller
    $("#saveBrands").click(function (e) {
        e.preventDefault();

        var brandArr = [];
        brandArr.length = 0;

        $.each($("#detailsTable tbody tr"), function () {
            brandArr.push({
                nameBrand: $(this).find('td:eq(0)').html(),
                logoBrand: $(this).find('td:eq(1)').html(),
                nameBrand: $(this).find('td:eq(2)').html(),
                nameBrand: $(this).find('td:eq(3)').html()
            });
        });


        var data = JSON.stringify({
            nameBrand: $("#nameBrand").val(),
            logoBrand: $("#logoBrand").val(),
            brand: brandArr
        });

        $.when(saveBrands(data)).then(function (response) {
            console.log(response);
        }).fail(function (err) {
            console.log(err);
        });
    });

</script>
    

